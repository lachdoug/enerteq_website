        <ul class="list-group">
          <% @apps.each do |app| %>
            <%= erb :_app, locals: { app: app } %>
          <% end %>
        </ul>
        <% @apps.each do |app| %>
          <%= erb :_app_modal, locals: { app: app } %>
        <% end %>
      </div>
    </div>
  </div>
